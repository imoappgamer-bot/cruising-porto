{
  "name": "cruising-porto-backend",
  "version": "1.0.0",
  "description": "RESTful API for Cruising Porto mobile app",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --fix",
    "migrate": "node src/migrations/run.js",
    "seed": "node src/seeds/index.js",
    "build": "npm run lint && npm run test"
  },
  "keywords": [
    "cruising",
    "lgbtq",
    "geolocation",
    "api",
    "rest"
  ],
  "author": "Cruising Porto Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.10.0",
    "redis": "^4.6.7",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.0",
    "sequelize": "^6.33.0",
    "sequelize-cli": "^6.6.2",
    "axios": "^1.5.0",
    "mapbox-gl": "^2.15.0",
    "firebase-admin": "^12.0.0",
    "nodemailer": "^6.9.6",
    "aws-sdk": "^2.1450.0",
    "winston": "^3.11.0",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "@types/node": "^20.9.0"
  }
}
