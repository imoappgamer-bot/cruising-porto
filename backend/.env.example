# ================================
# Backend - Variáveis de Ambiente
# Copia este ficheiro para .env e preenche os valores
# ================================

# Base de dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cruising_porto
DB_USER=postgres
DB_PASSWORD=
DB_SSL=false

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Servidor
PORT=5000
NODE_ENV=development

# URL do serviço de moderação por IA (deixa vazio para usar stub em dev/test)
AI_SERVICE_URL=

# Upload de imagens (Cloudinary ou similar)
CLOUD_NAME=
CLOUD_API_KEY=
CLOUD_API_SECRET=

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:3000
